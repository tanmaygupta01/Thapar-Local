<% layout('layouts/boilerplate') -%>

    <div class="row">
        <div class="col-md-6 mx-auto">
            <form action="/products/<%=product._id%>?_method=PATCH" class="validated-form" method="post" novalidate>
                <div class="mb-3">
                    <label for="name" class="form-label">Name  </label>
                    <input type="text" class="form-control" name="name" id="name" placeholder="Product Name" value="<%= product.name %> " required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="img" class="form-label">Image URL</label>
                    <input type="text" class="form-control" name="img" id="img" placeholder="Product Image URL" value="<%= product.img %> " required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">$</span>
                        <input type="text" name="price" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1" value="<%= product.price %> " required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="desc" class="form-label">Description </label>
                    <textarea name="desc" id="desc" rows="10" class="form-control" required><%=product.desc%> </textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button type="submit" class="btn btn-success btn-sm">Save</button>
            </form>
        </div>
    </div>